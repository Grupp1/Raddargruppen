<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:id="@+id/textView1"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/send_destUser"
		android:layout_marginLeft="30dip"
		android:layout_marginTop="20dip"></TextView>

	<EditText
		android:layout_width="match_parent"
		android:inputType="textPersonName"
		android:id="@+id/destUser"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="30dip"
		android:singleLine="true"
		android:editable="false"
		android:background="@drawable/rounded_edittext" android:layout_height="30dip"></EditText>
	
		<TextView
			android:id="@+id/textView2"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginLeft="30dip"
			android:layout_marginTop="10dip"
			android:text="@string/send_subject"></TextView>
		<EditText
			android:layout_width="match_parent"
			android:inputType="textPersonName"
			android:id="@+id/subject"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="30dip"
			android:maxLength="30"
			android:singleLine="true"
			android:background="@drawable/rounded_edittext" android:layout_height="30dip"></EditText>
		<TextView
			android:id="@+id/textView3"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginLeft="30dip"
			android:layout_marginTop="10dip"
			android:text="@string/send_message"></TextView>
		<EditText
			android:id="@+id/messageData"
			android:layout_height="200dp"
			android:gravity="top"
			android:layout_width="match_parent"
			android:layout_marginLeft="30dip"
			android:maxLength="300"
			android:layout_marginRight="30dip"
			android:background="@drawable/rounded_edittext"></EditText>
		
			
			<RelativeLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/linearLayout1"
			android:orientation="vertical"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="170dip"
			android:layout_marginTop="10dip">

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/linearLayoutNewPicture"
			android:orientation="vertical"
			android:layout_marginLeft="170dip"
			android:layout_marginRight="30dip"
			android:layout_marginTop="10dip">

			<Button
				android:text="@string/send_send"
			android:id="@+id/sendButton"
			android:textColor="#FFFFFF"
			android:layout_gravity="right" android:background="@drawable/rounded_button2" android:layout_height="30dip" android:layout_width="120dip"></Button>


		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
