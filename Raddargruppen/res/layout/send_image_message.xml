<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:id="@+id/textView1"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/send_destUser"
		android:layout_marginLeft="30dip"
		android:layout_marginTop="20dip"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:inputType="textPersonName"
		android:id="@+id/destUser"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="30dip"
		android:singleLine="true">
		<requestFocus></requestFocus>
	</EditText>
	<TextView
		android:id="@+id/textView2"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="30dip"
		android:layout_marginTop="10dip"
		android:text="@string/send_subject"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:inputType="textPersonName"
		android:id="@+id/subject"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="30dip"
		android:maxLength="30"
		android:singleLine="true"></EditText>

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/linearLayout1"
			android:orientation="vertical"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="170dip"
			android:layout_marginTop="10dip">
			<Button
				android:layout_marginBottom="20dip"
				android:text="@string/send_image_message_choice"
				android:layout_width="wrap_content"
				android:id="@+id/choiceButton"
				android:layout_height="wrap_content"
				android:layout_gravity="left"></Button>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/linearLayoutNewPicture"
			android:orientation="vertical"
			android:layout_marginLeft="170dip"
			android:layout_marginRight="30dip"
			android:layout_marginTop="10dip">

			<Button
				android:layout_marginBottom="20dip"
				android:text="@string/send_send"
				android:layout_width="wrap_content"
				android:id="@+id/sendButton"
				android:layout_height="wrap_content"
				android:layout_gravity="right"></Button>


		</LinearLayout>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:id="@+id/linearLayout2"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<ImageView
			android:src="@drawable/anteckna"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/preview"
			android:layout_gravity="center" android:layout_marginLeft="30dip" android:layout_marginRight="30dip" android:layout_marginBottom="30dip"></ImageView>
	</LinearLayout>
</LinearLayout>
