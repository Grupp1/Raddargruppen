<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/sos_meddelande_textview"
		android:text="@string/sos_meddelande"
		android:layout_marginLeft="30dip"
		android:layout_marginTop="40dip"
		android:layout_marginBottom="2dip"
		android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
	<EditText
		android:layout_height="200dp"
		android:layout_width="match_parent"
		android:gravity="top"
		android:id="@+id/sos_meddelande_edittext"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="30dip"
		android:maxLength="300">
		<requestFocus></requestFocus>
	</EditText>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout1">
		<Button
			android:layout_marginTop="8dip"
			android:layout_height="65dp"
			android:layout_width="80dp"
			android:id="@+id/sos_rensa_meddelande"
			android:text="@string/rensa"
			android:layout_marginLeft="30dip"></Button>
		<Button
			android:layout_marginTop="8dip"
			android:layout_height="65dp"
			android:id="@+id/sos_send_message_button"
			android:layout_width="180dp"
			android:text="@string/send_send"
			android:layout_marginRight="30dip"></Button>
	</LinearLayout>
</LinearLayout>
