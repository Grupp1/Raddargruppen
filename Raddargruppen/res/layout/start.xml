<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:baselineAligned="false">
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_marginTop="50dip"
		android:layout_height="match_parent">
		<TextView
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/textView1"
			android:layout_centerInParent="true"
			android:layout_gravity="center"
			android:text="@string/start_header"></TextView>
		<TextView
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/textView2"
			android:text="@string/start_user"
			android:layout_gravity="left"
			android:layout_marginLeft="30dip"
			android:layout_marginTop="40dip"></TextView>
		<EditText
			android:layout_gravity="center"
			android:singleLine="true"
			android:layout_width="match_parent"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="30dip"
			android:layout_marginTop="10dip"
			android:id="@+id/usertext1"
			android:background="@drawable/rounded_edittext"
			android:layout_height="30dp">
			<requestFocus></requestFocus>
		</EditText>
		<TextView
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/textView3"
			android:text="@string/start_password"
			android:layout_marginLeft="30dip"
			android:layout_marginTop="30dip"
			android:layout_gravity="left"></TextView>
		<EditText
			android:inputType="textPassword"
			android:layout_gravity="center"
			android:password="true"
			android:singleLine="true"
			android:layout_width="match_parent"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="30dip"
			android:layout_marginTop="10dip"
			android:id="@+id/passwordtext1"
			android:background="@drawable/rounded_edittext"
			android:layout_height="30dp"></EditText>
		<Button
			android:layout_gravity="right"
			android:text="@string/start_ok"
			android:textColor="#FFFFFF"
			android:id="@+id/okbutton"
			android:background="@drawable/rounded_button2"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="30dip"
			android:layout_marginTop="40dip"
			android:layout_height="30dip"
			android:layout_width="120dip"></Button>

	</LinearLayout>

</LinearLayout>