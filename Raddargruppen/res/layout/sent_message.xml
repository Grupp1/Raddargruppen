<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent">
		
		<TextView android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="TextView" android:layout_width="wrap_content"
			android:id="@+id/sentMessageDestUser"></TextView>

		<TextView android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="TextView" android:layout_width="wrap_content"
			android:id="@+id/sentMessageDate"></TextView>
			
		<TextView android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="TextView" android:layout_width="wrap_content"
			android:id="@+id/sentMessageSubject"></TextView>
			
		<TextView android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="TextView" android:layout_width="wrap_content"
			android:id="@+id/sentMessage"></TextView>
	</LinearLayout>

</ScrollView>
  
  
  
  
  
  

