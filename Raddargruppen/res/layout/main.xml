<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
 <ImageButton android:layout_width="90dp"
 android:layout_height="90dp"
 android:id="@+id/callButton"
 android:src="@drawable/phone"
android:background="#000000"
android:layout_marginLeft="55dip"
android:layout_marginTop="30dip"/>

<ImageButton android:src="@drawable/mess" 
android:id="@+id/messageButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_alignParentTop="true" 
android:layout_alignParentRight="true" 
android:layout_marginRight="55dip" 
android:layout_marginTop="30dip"/>
  
  <ImageButton android:src="@drawable/map" 
android:id="@+id/mapButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_below="@id/callButton" 
android:layout_marginLeft="55dip" 
android:layout_marginTop="10dip"/>

<ImageButton android:src="@drawable/report" 
android:id="@+id/reportButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_below="@id/messageButton" 
android:layout_marginRight="55dip" 
android:layout_marginTop="10dip"
android:layout_alignParentRight="true" />

  <ImageButton android:src="@drawable/icon" 
android:id="@+id/serviceButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_below="@id/mapButton" 
android:layout_marginLeft="55dip" 
android:layout_marginTop="10dip"/>

<ImageButton android:src="@drawable/setup" 
android:id="@+id/setupButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_below="@id/reportButton" 
android:layout_marginRight="55dip" 
android:layout_marginTop="10dip"
android:layout_alignParentRight="true" />

<ImageButton android:src="@drawable/icon" 
android:id="@+id/sosButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_below="@id/serviceButton" 
android:layout_marginLeft="55dip" 
android:layout_marginTop="10dip"/>

<ImageButton android:src="@drawable/logout" 
android:id="@+id/logButton" 
android:background="#000000" 
android:layout_height="90dp" 
android:layout_width="90dp"
android:layout_below="@id/setupButton" 
android:layout_marginRight="55dip" 
android:layout_marginTop="10dip"
android:layout_alignParentRight="true" />

</RelativeLayout>
